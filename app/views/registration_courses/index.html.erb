<p id="notice"><%= notice %></p>

<h1>Registration Courses</h1>

<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th>User</th>
      <th>Course offering</th>
      <th>Course title</th>
      <th>Course code</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registration_courses.each do |registration_course| %>
      <tr>
        <td><%= registration_course.grade %></td>
        <td><%= registration_course.user.email %></td>
        <td><%= registration_course.course_offering.semester %></td>
        <td><%= registration_course.course_offering.course.title %></td>
        <td><%= registration_course.course_offering.course.code %></td>
        <td><%= registration_course.course_offering.year %></td>

        <td><%= link_to 'Show', registration_course %></td>
        <td><%= link_to 'Edit', edit_registration_course_path(registration_course) %></td>
        <td><%= link_to 'Destroy', registration_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

